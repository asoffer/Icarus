io ::= import "std.io"

// Program arguments are accessible by invoking `builtin.arguments`, which
// returns a slice of character slices. That is, a value of type `[/][/]char`.

io.Print("There are ")
io.Print(builtin.arguments().length)
io.Print(" program argument(s). The first one is:\n")
io.Print(builtin.arguments()[0])
io.Print("\n")
