-- ::= import "examples/lib/core.ic"
io ::= import "examples/lib/io.ic"

factorial ::= (n: int64) -> int64 {
  return switch {
                        1  when  n < 2
    n * (n - 1)'factorial  when  n >= 2
  }
}

num := 0
while (num <= 10) do {
  io.Print(num)
  io.Print("! = ")
  io.Print(num'factorial)
  io.Print("\n")
  num += 1
}
