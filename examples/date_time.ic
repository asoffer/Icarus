-- ::= import "core.ic"
io ::= import "io.ic"
c  ::= import "c/time.ic"

now := c.time(null)
io.Print("Current time is: ", c.ctime(now))

timeinfo := c.gmtime(now)
io.Print("In UTC: ", c.asctime(timeinfo))

buffer: [256; char]
used := c.strftime(&buffer[0], 256, "%A, %B %e %Y".data, timeinfo)
io.Print("Formatted: ", slice(&buffer[0], used as u64), !'\n')
