foo () ping {
  print "sending..."
} pong {
  print "received!\n"
}

foo ::= scope {
  init ::= jump() { goto ping() }
  ping ::= block {
    before ::= () -> {}
    after ::= jump() { goto pong() }
  }
  pong ::= block {
    before ::= () -> {}
    after ::= jump() { goto ping() }
  }
  done ::= () -> {}
}
