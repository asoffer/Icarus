main ::= () -> () {
  foo () ping {
    print "sending..."
  } pong {
    print "received!\n"
  }
}

foo ::= scope {
  init ::= () -> () { jump ping() }
  ping ::= block {
    before ::= () -> {}
    after ::= () -> () { jump pong() }
  }
  pong ::= block {
    before ::= () -> {}
    after ::= () -> () { jump ping() }
  }
  done ::= () -> {}
}


