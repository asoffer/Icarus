io ::= import "examples/lib/io.ic"

foo () ping {
  io.Print("sending...")
} pong {
  io.Print("received!\n")
}

foo ::= scope {
  init ::= jump() { goto ping() }
  ping ::= block {
    before ::= () -> {}
    after ::= jump() { goto pong() }
  }
  pong ::= block {
    before ::= () -> {}
    after ::= jump() { goto ping() }
  }
  done ::= () -> {}
}
